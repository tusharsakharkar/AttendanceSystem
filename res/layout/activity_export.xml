<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Export" >
<ScrollView
                    android:id="@+id/scrollView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >
    
    
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0dp"
    android:background="@color/lighter_gray"
    android:orientation="vertical" >

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="60dp"
         android:background="@drawable/upper" >
              </LinearLayout>
              <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
            android:background="@color/accessibility_focus_highlight"
    android:orientation="vertical" >
    
     <TextView
         android:id="@+id/textView1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="left"
         android:layout_marginBottom="10dp"
         android:layout_marginLeft="20dp"
         android:layout_marginTop="12dp"
         android:text="Export Data"
                             android:textStyle="bold"
         android:textAppearance="?android:attr/textAppearanceLarge"
         android:textColor="@color/white1" />

     </LinearLayout>
<LinearLayout
         android:layout_width="match_parent"
                  android:layout_marginTop="10dp"
         android:orientation="vertical"
         android:layout_height="fill_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="05dp"
    android:layout_marginRight="05dp"
    android:layout_marginTop="02dp"
        android:background="@drawable/datahii"
 >
 <Button
    android:id="@+id/buttonxport"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Click To Export" />
    
</LinearLayout>
    

<LinearLayout
         android:layout_width="match_parent"
    android:background="@drawable/hello"         android:layout_marginLeft="05dp"
         android:layout_marginTop="05dp"
         android:layout_marginRight="05dp"
         
android:layout_height="wrap_content">
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="01dp"
        android:layout_marginLeft="05dp"
        android:layout_marginRight="05dp"
        android:layout_marginTop="01dp"
    android:background="@color/user_icon_8"        android:text="The Exported Excel file saved to following folder:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="13sp" />
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="05dp"
    android:layout_marginRight="05dp"
    android:layout_marginTop="05dp"
        android:background="@drawable/datahii"
 >

     <TextView
         android:id="@+id/path1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginBottom="01dp"
         android:layout_marginLeft="05dp"
         android:layout_marginRight="05dp"
         android:layout_marginTop="01dp"
         android:text=""
         android:textAppearance="?android:attr/textAppearanceLarge"
         android:textSize="15sp" />

     </LinearLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginLeft="05dp"
         android:layout_marginRight="05dp"
         android:layout_marginTop="05dp"
         android:background="@drawable/mailtxt" >

     <TextView
         android:id="@+id/path1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginBottom="01dp"
         android:layout_marginLeft="05dp"
         android:layout_marginRight="05dp"
         android:layout_marginTop="01dp"
                  android:textColor="@color/white1"
         android:text="Mail the following file to following email address"
         android:textAppearance="?android:attr/textAppearanceLarge"
         android:textSize="15sp" />

     </LinearLayout>
     
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginLeft="05dp"
         android:layout_marginRight="05dp"
         android:layout_marginTop="05dp"
         android:background="@color/battery_saver_mode_color" >

         <EditText
             android:id="@+id/editmail"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_weight="1"
        android:background="@drawable/datahii"
             android:ems="10"
             android:inputType="textEmailAddress" >

             <requestFocus />
         </EditText>
     
     </LinearLayout>
     <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="05dp"
    android:layout_marginRight="05dp"
    android:layout_marginTop="05dp"
        android:background="@drawable/present"
 >

 <Button
     android:id="@+id/sendmail"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:background="@drawable/datahii"
     android:text="Send mail"
     android:textColor="@color/keyguard_text_color_decline"
     android:textColorHighlight="@color/accessibility_focus_highlight" />
    
</LinearLayout>
    
     
     
     
     
</LinearLayout>
     </LinearLayout>
     </ScrollView>
</RelativeLayout>
